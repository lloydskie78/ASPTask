@model System.Data.DataTable
@using System.Data
@{
    ViewBag.Title = "Home Page";
}


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" />
<script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" defer></script>

<div><h1>List of Products</h1></div>

<script>


    $(document).ready(function () {
        $("#table1").DataTable({
            "ajax": {
                "url": "/Home/getProductlist",
                "type": 'GET',
                "dataType": 'JSON'
            },
            "columns": [
                { "data": "id" },
                { "data": "name" },
                { "data": "description" },
                { "data": "price" },
                {
                    render: function (a, b, object) {
                        var buttons = '<button class="btn btn-success glyphicon glyphicon-remove" id="remove"> Add</button>';
                        return buttons;
                    }
                }
            ]
        });
    });

</script>

<div class="row padding-top">
    <div class="col-md-7">
        <table id="table1" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="col-md-4">
        <h2>List of Selected Products</h2>
        <table id="table2" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="body1"></tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="col-md-12">
        <h1>Selected ITEMS</h1>
        <table id="table3" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody id="body2"></tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Total Price</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>